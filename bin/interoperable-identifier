ELEMENTS[0x16] = "\xaa\xfe\x00" ..                             -- Eddystone-UID
                 "\x00" ..                                     -- Ranging
                 "\x49\x6f\x49\x44" ..                         -- IoID prefix
                 "\x43\x4f\x44\x45\xb7\x3e" ..                 -- IoID type
                 "\x00\x00\x00\x01\xf9\x89" ..                 -- Instance
                 "\x00\x00"                                    -- RFU
ELEMENTS[0xff] = nil
